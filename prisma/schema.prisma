generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  AGENT
  OWNER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  ESCALATED
  SCHEDULED
  RESOLVED
  CLOSED
}

enum TicketCategory {
  MAINTENANCE
  BILLING
  COMMUNICATION
  OPERATIONS
  OTHER
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum MessageDirection {
  INBOUND
  OUTBOUND
  INTERNAL
}

enum MessageChannel {
  EMAIL
  WHATSAPP
  SMS
  INTERNAL
}

enum ContractorCategory {
  PLUMBING
  ELECTRICAL
  HVAC
  GENERAL
  CLEANING
  OTHER
}

enum AgentEventType {
  TRIAGE_COMPLETED
  NOTE_ADDED
  ESCALATED
  TOOL_EXECUTED
  STATUS_UPDATED
}

model User {
  id            String       @id @default(uuid()) @db.Uuid
  email         String       @unique
  fullName      String       @map("full_name")
  role          UserRole     @default(AGENT)
  avatarUrl     String?      @map("avatar_url")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  tickets       Ticket[]     @relation("TicketAssignee")
  messages      Message[]    @relation("MessageAuthor")
  ownedTickets  Ticket[]     @relation("TicketOwner")
  ownedMessages Message[]    @relation("MessageOwner")
  agentEvents   AgentEvent[] @relation("AgentEventAuthor")

  @@map("users")
}

model Unit {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  address1   String   @map("address_1")
  address2   String?  @map("address_2")
  city       String
  state      String
  postalCode String   @map("postal_code")
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  tenants    Tenant[]
  tickets    Ticket[]

  @@index([city, state])
  @@map("units")
}

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  unitId    String?  @map("unit_id") @db.Uuid
  unit      Unit?    @relation(fields: [unitId], references: [id], onDelete: SetNull)
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  email     String?
  phone     String?
  notes     String?
  userId    String?  @unique @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  tickets   Ticket[]
  linkedTickets Ticket[] @relation("TenantAccount")

  @@index([unitId])
  @@index([email])
  @@index([userId])
  @@map("tenants")
}

model Ticket {
  id           String         @id @default(uuid()) @db.Uuid
  unitId       String?        @map("unit_id") @db.Uuid
  tenantId     String?        @map("tenant_id") @db.Uuid
  assigneeId   String?        @map("assignee_id") @db.Uuid
  ownerUserId  String         @map("owner_user_id") @db.Uuid
  tenantUserId String?        @map("tenant_user_id") @db.Uuid
  subject      String
  description  String?
  status       TicketStatus   @default(OPEN)
  category     TicketCategory @default(OTHER)
  priority     TicketPriority @default(MEDIUM)
  channel      MessageChannel @default(EMAIL)
  sourceId     String?        @map("source_id")
  openedAt     DateTime       @default(now()) @map("opened_at")
  resolvedAt   DateTime?      @map("resolved_at")
  slaDueAt     DateTime?      @map("sla_due_at")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  searchVector Unsupported("tsvector")? @map("search_vector")

  owner       User         @relation("TicketOwner", fields: [ownerUserId], references: [id], onDelete: Restrict)
  unit        Unit?        @relation(fields: [unitId], references: [id], onDelete: SetNull)
  tenant      Tenant?      @relation(fields: [tenantId], references: [id], onDelete: SetNull)
  tenantAccount Tenant?    @relation("TenantAccount", fields: [tenantUserId], references: [userId], onDelete: SetNull)
  assignee    User?        @relation("TicketAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  messages    Message[]
  agentEvents AgentEvent[]

  @@index([unitId])
  @@index([tenantId])
  @@index([assigneeId])
  @@index([ownerUserId])
  @@index([tenantUserId])
  @@index([status, priority])
  @@map("tickets")
}

model Message {
  id           String           @id @default(uuid()) @db.Uuid
  ticketId     String           @map("ticket_id") @db.Uuid
  authorId     String?          @map("author_id") @db.Uuid
  ownerUserId  String           @map("owner_user_id") @db.Uuid
  tenantUserId String?          @map("tenant_user_id") @db.Uuid
  direction    MessageDirection
  channel      MessageChannel
  subject      String?
  bodyText     String?          @map("body_text")
  bodyHtml     String?          @map("body_html")
  attachments  Json?
  externalId   String?          @map("external_id")
  metadata     Json?
  sentAt       DateTime         @default(now()) @map("sent_at")
  createdAt    DateTime         @default(now()) @map("created_at")

  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  author User?  @relation("MessageAuthor", fields: [authorId], references: [id], onDelete: SetNull)
  owner  User   @relation("MessageOwner", fields: [ownerUserId], references: [id], onDelete: Restrict)

  @@index([ticketId, sentAt])
  @@index([channel])
  @@index([ownerUserId])
  @@index([tenantUserId])
  @@map("messages")
}

model Contractor {
  id           String             @id @default(uuid()) @db.Uuid
  companyName  String             @map("company_name")
  contactName  String?            @map("contact_name")
  email        String?
  phone        String?
  category     ContractorCategory @default(GENERAL)
  serviceAreas String[]           @map("service_areas")
  rating       Float?
  reviewCount  Int?               @map("review_count")
  notes        String?
  metadata     Json?
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")

  @@index([category])
  @@index([email])
  @@map("contractors")
}

model AgentEvent {
  id        String         @id @default(uuid()) @db.Uuid
  ticketId  String         @map("ticket_id") @db.Uuid
  actorId   String?        @map("actor_id") @db.Uuid
  type      AgentEventType
  note      String?
  payload   Json?
  createdAt DateTime       @default(now()) @map("created_at")

  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  actor  User?  @relation("AgentEventAuthor", fields: [actorId], references: [id], onDelete: SetNull)

  @@index([ticketId, createdAt])
  @@index([type])
  @@map("agent_events")
}
