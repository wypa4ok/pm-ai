# Core AI & Database
OPENAI_API_KEY=

# Supabase Postgres connection string
DATABASE_URL=
SHADOW_DATABASE_URL=${DATABASE_URL}

# Supabase Project
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=attachments

# Supabase Public (for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Webhook Secret (for user sync webhook)
SUPABASE_WEBHOOK_SECRET=your-webhook-secret

# Gmail OAuth (for email reading - optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:3000/api/integrations/gmail/oauth/callback
GMAIL_REFRESH_TOKEN=
GMAIL_LABEL=PM/Inbound
GMAIL_PROCESSED_LABEL=PM/Processed
GMAIL_POLL_INTERVAL_MS=60000
GMAIL_DEFAULT_OWNER_USER_ID=

# Gmail SMTP (for sending tenant invites - REQUIRED)
# Option 1: Use App Password (RECOMMENDED - simpler setup)
GMAIL_FROM_ADDRESS=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password
# To get App Password: Google Account → Security → 2-Step Verification → App Passwords

# Option 2: OR use OAuth2 (if App Password not set)
# Use the GOOGLE_CLIENT_ID, GOOGLE_CLIENT_SECRET, GMAIL_REFRESH_TOKEN above

# WhatsApp Cloud API
WA_VERIFY_TOKEN=
WA_APP_ID=
WA_APP_SECRET=
WA_PHONE_NUMBER_ID=

# External APIs
GOOGLE_PLACES_API_KEY=

# Runtime
NODE_ENV=development

# Application URL (for generating invite links)
NEXT_PUBLIC_APP_URL=http://localhost:3000
# For production: https://yourdomain.com
